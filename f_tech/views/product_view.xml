<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_view_tree_catalog" model="ir.ui.view">
        <field name="name">product.view.tree.catalog</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree string="Products" editable="bottom" default_order="default_code asc">
                <header>
                    <button name="action_add_to_sale_order" type="object" string="Add" class="oe_highlight"
                            icon="fa-shopping-cart" />

                </header>
                <field name="name"/>
                <field name="default_code"/>
                <field name="list_price"/>
                <field name="categ_id"/>

                <field name="is_in_sale_order" invisible="1"/>
                <button name="action_add_qty" type="object" string="PLUS" icon="fa-plus" class="oe_highlight" invisible=" not is_in_sale_order"/>
                <field name="product_so_qty" invisible=" not is_in_sale_order"/>
                <button name="action_sub_qty" type="object" string="MINUS" icon="fa-minus" class="oe_highlight" invisible=" not is_in_sale_order"/>
                <button name="action_remove_from_sale_order" type="object" string="Remove"
                        icon="fa-trash" class="oe_highlight" invisible=" not is_in_sale_order"/>


            </tree>
        </field>
    </record>
</odoo>

