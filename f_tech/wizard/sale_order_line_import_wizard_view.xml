<odoo>
    <record id="view_sale_order_line_import_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.line.import.wizard.form</field>
        <field name="model">sale.order.line.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Order Lines">
                <group>
                    <field name="filename" invisible="1"/>
                    <field name="file" widget="binary" filename="filename"/>
                    <field name="import_by"/>

                </group>
                <footer>
                    <button string="Download Sample File" type="object" name="download_sample_file"
                            class="btn-primary"/>
                    <button string="Import" type="object" name="import_file" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>