<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_line_to_purchase_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.line.to.purchase.wizard.form</field>
        <field name="model">sale.order.line.to.purchase.wizard</field>
        <field name="arch" type="xml">
            <form string="Convert Sale Order Lines to Purchase Orders">
                <group>
                    <field name="sale_order_id" invisible="1"/>
                     <field name="partner_id"/>
                    <field name="line_ids" widget="one2many_list" context="{'default_sale_order_id': sale_order_id}">
                        <tree editable="bottom">
                            <field name="selected"/>
                            <field name="product_id"/>
                            <field name="default_code"/>
                            <field name="product_uom_qty"/>
                            <field name="unit_price"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="action_create_purchase_orders" type="object" string="Create Purchase Order" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
